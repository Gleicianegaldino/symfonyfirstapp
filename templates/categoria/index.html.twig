{% extends 'base.html.twig' %}

{% block title %}
	{{ titulo }}
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center align-items-center mt-4 mb-2">
		<h1>{{ titulo }}   </h1>

		<a href="{{ path('categoria_adicionar') }}" class="btn btn-primary   py-2 px-md-3"> Adicionar</a>
	</div>
	<table class="table table-bordered border-primary">
		<thead>
			<tr>
				<td>ID</td>
				<td>Descrição</td>
				<td>Ações</td>
			</tr>
		</thead>

		<tbody>
			{% for categoria in categorias %}
				<tr>
					<td>{{ categoria.id }}</td>
					<td>{{ categoria.descricaocategoria }}</td>
					<td>
						<a href="{{ path('categoria_editar', {id: categoria.id} )}}" class="btn btn-success">Editar</a>
						<a href="{{ path('categoria_excluir', {id: categoria.id})}}" class="btn btn-danger">Excluir</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</tbody>
</table>{% endblock %}