{% extends 'base.html.twig' %}

{% block title %}
	{{ titulo }}
{% endblock %}

{% block body %}
	<div class="container justify-content align-items-center mt-4 mb-2">
		<h1>{{ titulo }}</h1>

		<a href="{{ path('produto_adicionar') }}" class="btn btn-primary py-2 px-md-3"> Adicionar</a>
		<form method="get">
			<label>Pesquisar pelo nome: </label>
			<input type="text" name="nome" class="form-control" value="{{ nomeproduto }}"/>
			<button type="submit" class="btn btn-primary" style="margin-top: 5px">Pesquisar </button>
		</form>
	</div>
	<table class="table">
		<thead>
			<tr>
				<td>ID</td>
				<td>Nome do produto</td>
				<td>Valor</td>
				<td>Categoria</td>
				<td>Ações</td>
			</tr>
		</thead>

		<tbody>
			{% for produto in produtos %}
				<tr>
					<td>{{ produto.id }}</td>
					<td>{{ produto.nomeproduto }}</td>
					<td>{{ produto.valor }}</td>
					<td>{{ produto.categoria.descricaocategoria }}</td>
					<td>
						<a href="{{ path('produto_editar', {id: produto.id} )}}" class="btn btn-success">Editar</a>
						<a href="{{ path('produto_excluir', {id: produto.id})}}" class="btn btn-danger">Excluir</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</tbody>
</table>{% endblock %}